function [] = plot_var(input,window,title_input)

figure;
hold on;
plot(input,'r');
plot(ones(length(input),1)*mean(input),'b');
plot(movmean(input,window),'k');
plot(movmean(input,window),'k');
title(title_input);
xlabel("sample (50 ms)");
ylabel("Angle (Â°)");
legend("raw data","mean","mov mean","mov mean expo");
hold off;
set(gca,'XMinorTick','on','YMinorTick','on');
end

